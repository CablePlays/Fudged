extends layout

block assets
    link(rel='stylesheet' href='/stylesheets/pages/shop.css')

block content
    .section-a
        .subsection-a
            h1 Jar

            .spacer.v20

            p The perfect gift for anyone.

            .spacer.v20

            a.primary(href='/checkout/1') Purchase
        .subsection-b
            //- .img-div
    
    .section-yoco
        .subsection-a
            img(src='/assets/logos/yoco.svg' onclick='window.open("https://yoco.com"), "_blank"')
        .subsection-b
            h2 Powered By Yoco
            p All payments are made through Yoco, ensuring the security of your payment details.

    .section-b
        .item
            h1 Packet
            p.description 50g
            p.price R12 / item
            img(src='/assets/shop/egg-blue.png')
            a.primary(href='/checkout/0') Purchase
        .item
            h1 Jar
            p.description 800g
            p.price R12 / item
            img(src='/assets/shop/egg-blue.png')
            a.primary(href='/checkout/1') Purchase
        .item
            h1 Batch
            p.description 1200g
            p.price R12 / item
            img(src='/assets/shop/egg-blue.png')
            a.primary(href='/checkout/2') Purchase
        .item
            h1 Bulk
            p.description Custom Amount
            p.price Price To Be Determined
            img(src='/assets/shop/egg-blue.png')
            a.primary Purchase

    .section-c
        .item
            h2 Brown Egg
            p Hatches a brown dog.
            p.price 500g
            img(src='/assets/shop/egg-blue.png')
            a.primary Purchase
        .item
            h2 White Egg
            p Hatches a white dog.
            p.price 1000g
            img(src='/assets/shop/egg-green.png')
            a.primary Purchase

    .section-d
        .item
            h2 Basic Dog Food
            p.description Cheap dog food which grows a dog a little bit.
            p.price 100g
            img(src='/assets/shop/egg-blue.png')
            a.primary Purchase
        .item
            h2 Buffed Dog Food
            p.description Grows a dog a bit more than the cheap stuff.
            p.price 200g
            img(src='/assets/shop/egg-blue.png')
            a.primary Purchase
        .item
            h2 Great Dog Food
            p.description Quite expensive but works very well.
            p.price 300g
            img(src='/assets/shop/egg-blue.png')
            a.primary Purchase
        .item
            h2 Prime Dog Food
            p.description Is this stuff even worth the price?
            p.price 500g
            img(src='/assets/shop/egg-blue.png')
            a.primary Purchase